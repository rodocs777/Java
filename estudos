import java.util.*;
import java.lang.*;
import java.io.*;

public class Main {
    public static void main(String[] args) {
    	double x = 123.12321;
        System.out.printf("%.2f%n", x);
        System.out.printf("%.6f%n", x);
        Locale.setDefault(Locale.US);
        System.out.printf("%.2f%n", x);
        System.out.printf("%.6f%n", x);
    }
}



