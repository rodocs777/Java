import java.util.*;
import java.lang.*;
import java.io.*;

public class Main {
    public static void main(String[] args) {
        int[] my_array1 = {
                1789, 2035, 1899, 1456, 2013,
                1458, 2458, 1254, 1472, 2365,
                1456, 2165, 1457, 2456};
        String[] my_array2 = {
                "Java",
                "Python",
                "PHP",
                "C#",
                "C Programming",
                "C++"};
       
        System.out.println("Array 1 - Original: " + Arrays.toString(my_array1));
       
         Arrays.sort(my_array1);
        System.out.println("Array 1 - em ordem: " + Arrays.toString(my_array1));
       
        System.out.println("Array 2 - Original: " + Arrays.toString(my_array2));
       
         Arrays.sort(my_array2);
        System.out.println("Array 2 - em ordem: " + Arrays.toString(my_array2));
    }
}




[1789, 2035, 1899, 1456, 2013, 1458, 2458, 1254, 1472, 2365, 1456, 2165, 1457, 2456]
[1254, 1456, 1456, 1457, 1458, 1472, 1789, 1899, 2013, 2035, 2165, 2365, 2456, 2458]
[Java, Python, PHP, C#, C Programming, C++]
[C Programming, C#, C++, Java, PHP, Python]

[Execution complete with exit code 0]



