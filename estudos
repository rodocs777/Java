        int salarioMensal = 50_000;
        long idadeMilisegundos = 2983437472397987L;
        char initial = 'R';
        boolean eMarioDeIdade = true;
        String firstName = "Rodolfo" + " Mariucci";
       
                System.out.println(minhaIdade);
                System.out.println(firstName.toLowerCase());
                System.out.println(salarioMensal);
                System.out.println(idadeMilisegundos);
    }
}



