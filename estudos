import java.util.*;
import java.lang.*;
import java.io.*;

// The main method must be in a class named "Main".
class Main {
    public static void main(String[] args) {
        //Dados do cliente
        byte minhaIdade = 29;
        int salarioMensal = 50_000;
        long idadeMilisegundos = 2983437472397987L;
        char initial = 'R';
        boolean eMarioDeIdade = true;
        String firstName = "Rodolfo" + " \nMariucci";
       
        System.out.println(minhaIdade);
        System.out.println(firstName.toLowerCase());
        System.out.println(salarioMensal);
        System.out.println(idadeMilisegundos);
        System.out.println("oi");
    }
}


